<h1>Listing groups</h1>

<style>
table, td, th
{
border:1px solid blue;
}
th
{
background-color:blue;
color:white;
}
</style>
<table>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.title %></td>
    <td><a href="/groups/<%= group.id %>" >Show</a></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Group', new_group_path %>
