<% if @logout == true %>
<span class="help-inline">You have been logged out. Bye!</span>
    <% end %>
<%= form_tag("/login", :method => "post", :class => 'form-horizontal') do %>
<div class="control-group">
  <%= label_tag(:login, "Login", :class => 'control-label') %>
    
  <div class="controls">
    <%= text_field_tag(:login, nil, :placeholder => 'exempl_e', :class => 'input-small') %>
  </div>
</div>
<div class="control-group<% if @errorlogin == true %> error<% end %>">
  <%= label_tag(:pass, "Password", :class => 'control-label') %>
  <div class="controls">
    <%= password_field_tag(:pass, nil, :placeholder => ('●' * 8), :class => 'input-small') %>
    <% if @errorlogin == true %>
    <span class="help-inline">Incorrect password</span>
    <% end %>
  </div>
</div>
<div class="control-group">
  <div class="controls">
    <%= submit_tag("Enter", :class => 'btn btn-success') %>
  </div>
</div>

<% end %>
