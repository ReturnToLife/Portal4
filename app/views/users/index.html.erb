<h1>Listing users</h1>

<style>
table, td, th
{
border:1px solid blue;
}
th
{
background-color:blue;
color:white;
}
</style>
<table>
  <tr>
    <th>Login</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>City</th>
    <th>Email</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.city %></td>
    <td><%= user.email %></td>
    <td><a href="/users/<%= user.id %>" >Show</a></td>
  </tr>
<% end %>
</table>

<br />

